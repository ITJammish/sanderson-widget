<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.SandersonWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.SandersonWidget.AppWidgetContainer"
    tools:ignore="NestedWeights">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_progress_indicator_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:minHeight="30dp" />

            <TextView
                android:id="@+id/item_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Project 1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_progress_indicator_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:minHeight="30dp" />

            <TextView
                android:id="@+id/item_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Project 2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_progress_indicator_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:minHeight="30dp" />

            <TextView
                android:id="@+id/item_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Project 3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_progress_indicator_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:minHeight="30dp" />

            <TextView
                android:id="@+id/item_title_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Project 4" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
