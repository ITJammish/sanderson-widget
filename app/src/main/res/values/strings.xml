    <string name="theme_label_blank_green">Green</string>
    <string name="theme_label_blank_purple">Purple</string>
    <string name="theme_label_blank_red">Red</string>

    <string-array name="themes_array" tools:ignore="InconsistentArrays">
        <item>@string/theme_label_blank_orange</item>
        <item>@string/theme_label_blank_blue</item>
        <item>@string/theme_label_blank_green</item>
        <item>@string/theme_label_blank_purple</item>
